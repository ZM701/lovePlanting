.share{
  width: 40%;
  margin: 0 auto;
  position: relative;
  text-align: center;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
  background: #9c9;
  color: #fff;
}

.save{
  width: 40%;
  margin: 0 auto;
  position: relative;
  text-align: center;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
  color: #9c9;
}
.save::after {
  content: '';
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid #9c9;
  border-radius: 100rpx;
  -webkit-transform: scale(0.5, 0.5);
  transform: scale(0.5, 0.5);
  -webkit-transform-origin: top left;
} 


